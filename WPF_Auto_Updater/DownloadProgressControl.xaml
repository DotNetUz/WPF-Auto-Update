<UserControl x:Class="WPF_Auto_Update.DownloadProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Auto_Update"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="White">
    <StackPanel Margin="10">
        <TextBlock Text="Downloading..." TextAlignment="Center" FontSize="20" FontWeight="Bold"></TextBlock>
        <ProgressBar Name="progressBar" Height="30" Margin="0,10,0,0"/>
    </StackPanel>
</UserControl>
